extends layout

block content
    .heading-page.header-text
      section.page-heading
        .container
          .row
            .col-lg-12
              .text-content
                h4=dataPost[0].tagName
                h2=dataPost[0].categoryName
    // Banner Ends Here
    section.call-to-action
      .container
        .row
          .col-lg-12
            .main-content
              .row
                .col-lg-8
                  span Stand Blog HTML5 Template
                  h4 Creative HTML Template For Bloggers!
                .col-lg-4
                  .main-button
                    a(rel='nofollow', href='https://templatemo.com/tm-551-stand-blog', target='_parent') Download Now!
    section.blog-posts.grid-system
      .container
        .row
          .col-lg-8
            .all-blog-posts
              .row
                .col-lg-12
                  .blog-post
                    .blog-thumb
                      img(src='/uploads/'+dataPost[0].postImage alt='' style='height:600px')
                    .down-content
                      span=dataPost[0].tagName
                      a(href='post-details.html')
                        h4=dataPost[0].postName
                      ul.post-info
                        li
                          a(href='#') James Thew
                        li
                          a=dataPost[0].createdDate.toString().slice(4,15)
                        li
                          a(href='#') 10 Comments
                      p=dataPost[0].postDescription
                      p=dataPost[0].postContent
                      .post-options
                        .row
                          .col-6
                            ul.post-tags
                              li
                                i.fa.fa-tags
                              li
                                a(href='#')=dataPost[0].categoryName
                          .col-6
                            ul.post-share
                              li
                                i.fa.fa-share-alt
                              li
                                a(href='#') Facebook
                                | ,
                              li
                                a(href='#')  Twitter
                .col-lg-12
                  .sidebar-item.comments
                    .sidebar-heading
                      h2 4 comments
                    .content
                      ul
                        li
                          .author-thumb
                            img(src='assets/images/comment-author-01.jpg', alt='')
                          .right-content
                            h4
                              | Charles Kate
