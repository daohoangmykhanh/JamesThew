                .col-lg-12
                  .sidebar-item.submit-comment
                    .sidebar-heading
                      h2 Your comment
                    .content
                      form#comment(action='#', method='post')
                        .row
                          .col-md-6.col-sm-12
                            fieldset
                              input#name(name='name', type='text', placeholder='Your name', required='')
                          .col-md-6.col-sm-12
                            fieldset
                              input#email(name='email', type='text', placeholder='Your email', required='')
                          .col-lg-12
                            fieldset
                              textarea#message(name='message', rows='6', placeholder='Type your comment', required='')
                          .col-lg-12
                            fieldset
                              button#form-submit.main-button(type='submit') Submit
          .col-lg-4
            .sidebar
              .row
                .col-lg-12
                  .sidebar-item.search
                    form#search_form(name='gs', method='GET', action='#')
                      input.searchText(type='text', name='q', placeholder='type to search...', autocomplete='on')
                .col-lg-12
                  .sidebar-item.recent-posts
                    .sidebar-heading
                      h2 Recent Posts
                    .content
                      ul
                        li
                          a(href='post-details.html')
